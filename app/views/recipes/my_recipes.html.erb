<!-- all my recipes -->
<div class="container">
  <h1><%=current_user.first_name%>, here are all of your recipes:</h1>

  <ul id="recipe_list">
    <% if @recipes.each do |r| %>
      <li><%= link_to r.title, user_recipe_path(r.user_id, r.id) %></li>
      <li><%= r.date_posted %></li>
      <li><%= r.description %></li><br>
      <%end%>
    <%end%>
  </ul>

</div>