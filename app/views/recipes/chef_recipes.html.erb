<!-- all recipes by one chef -->
<div class="container">
  <h1>All recipes by <%= @recipes.first.user.first_name + @recipes.first.user.last_name%> </h1>

  <ul id="recipe_list">
    <% @recipes.each do |r| %>
    <li><%= link_to r.title, user_recipe_path(r.user_id, r.id)  %></li>
    <li><%= r.date_posted %></li>
    <li><%= r.description %></li><br>
    <%end%>
  </ul>

</div>