<ul id="recipe_form">
    <%= form_for ([@user, @recipe]) do |f|%>
      <li><%=f.text_field :title, placeholder: "Recipe name"%></li>
      <li><%=f.text_area :description, placeholder: "Description (optional)"%></li>
      <li><%=f.text_area :ingredients, placeholder: "List of ingredients separated by a comma"%></li>
      <li><%=f.text_area :directions, placeholder: "Directions separated by comma"%></li>
      <li><%=f.submit "Add recipe"%></li>

      <%end%>
  </ul>