<!-- all recipes feed -->
<div class="container">
  <h1> Welcome <%=current_user.first_name%> </h1>
  <h1>Here are recently posted recipes:</h1>

  <ul id="recipe_list">
    <% if @recipes.each do |r| %>
      <li><%= link_to r.title, user_recipe_path(r.user_id, r.id)  %></li>
      <li>Chef: <%= link_to r.user.first_name + " " + r.user.last_name, user_chef_recipes_path(r.user_id) %></li>
      <li><%= r.date_posted %></li>
      <li><%= r.description %></li><br>
      <%end%>
    <%end%>
  </ul>

</div>